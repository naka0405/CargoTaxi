@model CargoTaxi.Models.CreateCarViewModel

@{
    ViewBag.Title = "CreateCar";
}
@if (Model.Message != null)
{
    <h3>@Model.Message</h3>
}

<h2>Создание новой машины</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.Label("Номер", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.RegistrNumber, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.RegistrNumber, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Категория машины", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.CategoryId, Model.CarCategories as SelectList, new { Name = "CategoryId", @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Водитель", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.DriverId, Model.Drivers as SelectList, new { Name = "DriverId", @class = "form-control" })
        </div>
    </div>



    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Зарегистрировать" class="btn btn-success" />
        </div>
    </div>
</div>
}


<div>
    @Html.ActionLink("Назад к списку", "AllCars")
</div>
