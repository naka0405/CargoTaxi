@model CargoTaxi.Models.UserViewModel
ViewBag.Title = "Client Details ";


<h2>Клиент - "@Model.FirstName"+" "+"@Model.LastName"</h2>

<dl class="row details first">
    <dt class="col-sm-2">Id</dt>
    <dd class="col-sm-10">@Model.Id</dd>
</dl>
<dl class="row details">
    <dt class="col-sm-2">Имя</dt>
    <dd class="col-sm-10">@Model.FirstName</dd>
</dl>
<dl class="row details">
    <dt class="col-sm-2">Фамилия</dt>
    <dd class="col-sm-10">@Model.LastName</dd>
</dl>
<dl class="row details">
    <dt class="col-sm-2">Номер телефона</dt>
    <dd class="col-sm-10">@Model.PhoneNumber</dd>
</dl>
<dl class="row details">
    <dt class="col-sm-2">Email</dt>
    <dd class="col-sm-10">@Model.Email</dd>
</dl>

<dl class="row details">
    <dt class="col-sm-2">Заказы</dt>
    <dd class="col-sm-10">
        <ul class="list-unstyled">
            @foreach (var item in Model.Orders)
            {
<li>- <a href="/CargoTaxi/Category/@item.Id">@item.Number</a></li>
}
        </ul>
    </dd>
</dl>
