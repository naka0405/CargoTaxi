@model CargoTaxi.Models.OrderViewModel
@{ViewBag.Title = "Order Details "; }


<h2>Заказ - @Model.Number</h2>

@*<dl class="row details first">
    <dt class="col-sm-2">Id</dt>
    <dd class="col-sm-10">@Model.Id</dd>
</dl>*@
<hr style="border: 1px solid blue" />
<dl class="row details">
    <dt class="col-sm-2">Дата</dt>
    <dd class="col-sm-10">@Model.Date.ToShortDateString()</dd>
</dl>
<hr/>
<dl class="row details">
    <dt class="col-sm-2">Адрес отправления</dt>
    <dd class="col-sm-10">@Model.StartAdress</dd>
</dl>
<dl class="row details">
    <dt class="col-sm-2">Адрес доставки</dt>
    <dd class="col-sm-10">@Model.FinishAdress</dd>
</dl>
<hr />
<dl class="row details">
    <dt class="col-sm-2">Время начальное</dt>
    <dd class="col-sm-10">@Model.StartTime</dd>
</dl>
<dl class="row details">
    <dt class="col-sm-2">Время конечное</dt>
    <dd class="col-sm-10">@Model.FinishTime</dd>
</dl>
<hr />
<dl class="row details">
    <dt class="col-sm-2">Выполнен</dt>
    <dd class="col-sm-10">@Model.IsDone</dd>
</dl>
<dl class="row details">
    <dt class="col-sm-2">Категория</dt>
    <dd class="col-sm-10">@Model.Category.Name</dd>
</dl>
<dl class="row details">
    <dt class="col-sm-2">Машина</dt>
    <dd class="col-sm-10">@Model.Car.RegistrNumber</dd>
</dl>
<hr />
<dl class="row details">
    <dt class="col-sm-2">Клиент</dt>
    <dd class="col-sm-10"> @Model.Client.FirstName @Model.Client.LastName</dd>  
</dl>

<dl class="row details">
    <dt class="col-sm-2">Телефон</dt>
    <dd class="col-sm-10"> @Model.Client.PhoneNumber</dd>
</dl>
<hr style="border: 1px solid blue" />
<div>
    @Html.ActionLink("Назад", "../Car/CarDetails", new { id = Model.CarId })<br/>
    @Html.ActionLink("Все заказы", "Orders")
</div>

