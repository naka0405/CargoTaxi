@model CargoTaxi.Models.OrderViewModel
@{ViewBag.Title = "Order Details "; }


<h2>Заказ- "@Model.Number"</h2>

@*<dl class="row details first">
    <dt class="col-sm-2">Id</dt>
    <dd class="col-sm-10">@Model.Id</dd>
</dl>*@
<dl class="row details">
    <dt class="col-sm-2">Дата</dt>
    <dd class="col-sm-10">@Model.Date</dd>
</dl>
<dl class="row details">
    <dt class="col-sm-2">Адрес1</dt>
    <dd class="col-sm-10">@Model.StartAdress</dd>
</dl>
<dl class="row details">
    <dt class="col-sm-2">Адрес2</dt>
    <dd class="col-sm-10">@Model.FinishAdress</dd>
</dl>
<dl class="row details">
    <dt class="col-sm-2">Время1</dt>
    <dd class="col-sm-10">@Model.StartTime</dd>
</dl>
<dl class="row details">
    <dt class="col-sm-2">Время2</dt>
    <dd class="col-sm-10">@Model.FinishTime</dd>
</dl>
<dl class="row details">
    <dt class="col-sm-2">Выполнен</dt>
    <dd class="col-sm-10">@Model.IsDone</dd>
</dl>
<dl class="row details">
    <dt class="col-sm-2">Категория</dt>
    <dd class="col-sm-10">@Model.CarCategoryId</dd>
</dl>
<dl class="row details">
    <dt class="col-sm-2">Машина</dt>
    <dd class="col-sm-10">@Model.CarId</dd>
</dl>

<dl class="row details">
    <dt class="col-sm-2">Клиент</dt>
    <dd class="col-sm-10"> @Model.Client.FirstName @Model.Client.LastName</dd>  
</dl>
<div>
    @Html.ActionLink("Назад к списку", "AllOrders")
</div>

