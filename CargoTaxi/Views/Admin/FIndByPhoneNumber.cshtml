
@{
    ViewBag.Title = "FIndByPhoneNumber";
}

<h2>Поиск по номеру телефона</h2>

@using (Html.BeginForm("FindByPhoneNumber", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Введите номер</h4>
        <hr />
        <div class="form-group">
            @Html.Label("Номер", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("PhoneNumber"), new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessage("", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Найти" class="btn btn-default" />
            </div>
        </div>
    </div>
}
