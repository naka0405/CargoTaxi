@model CargoTaxi.Models.FindParamViewModel
@{
    ViewBag.Title = "FindView";
}

<h2>@Model.Title</h2>

<form method="post" action="@Model.Action">
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Введите параметр</h4>
        <hr />
        <div class="form-group">
            @Html.Label(Model.ParamName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">

                <input type="text" class="form-control" name="param" />

                <!--@Html.TextBox("param")-->@*, new { htmlAttributes = new { @class = "form-control" } })*@
                @Html.ValidationMessage("", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Найти" class="btn btn-success" />
            </div>
        </div>
    </div>
</form>

