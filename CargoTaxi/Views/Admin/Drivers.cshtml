@model IList<CargoTaxi.Models.UserViewModel>

@{
    ViewBag.Title = "Drivers";
}

<h2>Водители</h2>

<p>
    @Html.ActionLink("Добавить", "FindView", new { findParam = 1 })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Имя")
        </th>
        <th>
            @Html.DisplayName("Фамилия")
        </th>
        <th>
            @Html.DisplayName("Номер телефона")
        </th>
        <th>
            @Html.DisplayName("Email")
        </th>
        <th>
            @Html.DisplayName("Права")
        </th>
        <th>
            @Html.DisplayName("IsActive")
        </th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DriverLicense)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActiveDriver)
            </td>
            <td>
                @*@Html.ActionLink("Добавить машину", "CreateCar", "Car",  ) |*@
                @Html.ActionLink("Изменить", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Удалить", "DeactivateDriver", new { id = item.Id })
            </td>
        </tr>
    }
</table>
<hr />
<div>
    @Html.ActionLink("Назад", "Index", "Admin")
</div>