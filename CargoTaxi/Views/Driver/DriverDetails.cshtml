@model CargoTaxi.Models.UserViewModel
@{ViewBag.Title = "Driver Details ";}


<h2>Водитель - @Model.FirstName @Model.LastName</h2>

<dl class="row details">
    <dt class="col-sm-2">Имя</dt>
    <dd class="col-sm-10">@Model.FirstName</dd>
</dl>
<dl class="row details">
    <dt class="col-sm-2">Фамилия</dt>
    <dd class="col-sm-10">@Model.LastName</dd>
</dl>
<dl class="row details">
    <dt class="col-sm-2">Номер телефона</dt>
    <dd class="col-sm-10">@Model.PhoneNumber</dd>
</dl>
<dl class="row details">
    <dt class="col-sm-2">Email</dt>
    <dd class="col-sm-10">@Model.Email</dd>
</dl>
<dl class="row details">
    <dt class="col-sm-2">№ удостоверения</dt>
    <dd class="col-sm-10">@Model.DriverLicense</dd>
</dl>
<dl class="row details">
    <dt class="col-sm-2">Машины</dt>
    <dd class="col-sm-10">
        <ul class="list-unstyled">
            @foreach (var item in Model.Cars)
            {
<li>- <a href="/Car/CarDetails/@item.Id">@item.RegistrNumber</a></li>}
        </ul>
    </dd>
</dl>
